@model IEnumerable<Cine.AppWeb.CineWS.CompraEntrada>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Content/tablas.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Crear")
    </p>
    <div class="datagrid">
        <table>
            <thead>
                <tr>

                    <th>
                        Nombres
                    </th>
                    <th>
                        cantidad
                    </th>

                    <th>Sala</th>
                    <th>Precio</th>
                    <th></th>
                </tr>

            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.Espectador.nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cantidad)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Funcion.sala.descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tipoEntrada.precioNormal)
                        </td>

                        <td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>

</body>
</html>
